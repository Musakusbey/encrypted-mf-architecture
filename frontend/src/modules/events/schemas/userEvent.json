{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "user.login",
        "user.logout",
        "user.created",
        "user.updated",
        "user.deleted"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "payload": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "username": {
          "type": "string",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "timestamp": {
          "type": "number"
        }
      },
      "required": ["userId", "timestamp"]
    },
    "ts": {
      "type": "number"
    },
    "sig": {
      "type": "string",
      "minLength": 64
    }
  },
  "required": ["type", "version", "payload", "ts", "sig"]
}
